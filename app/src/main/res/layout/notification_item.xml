<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/n_i_image_profile_id"
        android:layout_marginTop="10dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        app:civ_border_width="3dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="10dp"

        android:layout_marginEnd="0dp"
        android:layout_toStartOf="@id/n_i_post_image_id"
        android:layout_toEndOf="@id/n_i_image_profile_id"
        android:orientation="vertical">

        <TextView
            android:id="@+id/n_i_user_name_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"

            android:textStyle="bold" />

        <TextView
            android:id="@+id/n_i_comment_id"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content" />

    </LinearLayout>

    <ImageView
        android:id="@+id/n_i_post_image_id"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true" />

</RelativeLayout>